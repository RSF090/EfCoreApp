@model Ogrenci
<form asp-controller="Ogrenci" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciAd" class="form-label">Öğrenci Adı</label>
        <input type="text" asp-for="OgrenciAd" class="form-control" />
    </div>

      <div class="mb-3">
        <label asp-for="OgrenciSoyad" class="form-label">Öğrenci Soyadı</label>
        <input type="text" asp-for="OgrenciSoyad" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Eposta</label>
        <input type="text" asp-for="Eposta" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Telefon</label>
        <input type="text" asp-for="Telefon" class="form-control" />
    </div>
    
        <button type="submit" class="btn-secondary">Kaydet</button>


</form>